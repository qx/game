<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/all">
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:gravity="center"
		android:textSize="20sp"
		android:text="越多好友攻击力越强说明" />

	<!-- 好友账号输入,加好友 -->
	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="40dp">
		<!-- 金钱tag-->
		<EditText
			android:id="@+id/p3_friend"
			android:layout_width="200dp"
			android:layout_height="40dp"
			android:gravity="center"
			android:text="好友账号输入栏" />
		<!-- 加好友按钮-->
		<Button
			android:id="@+id/p3_friendbutton"
			android:layout_width="120dp"
			android:layout_height="40dp"
			android:layout_toRightOf="@id/p3_friend"
			android:gravity="center"
			android:text="加为好友" />
	</RelativeLayout>
	<!-- 推荐好友-->
	<Button
		android:id="@+id/p3_friendbutton"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:gravity="center"
		android:text="推荐好友" />
	<!-- 推荐给新浪微博的好友(请先设置同步)-->
	<Button
		android:id="@+id/p3_friendbutton"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:gravity="center"
		android:text="推荐给新浪微博的好友(请先设置同步)" />
	<!-- 推荐给MSN的好友-->
	<Button
		android:id="@+id/p3_friendbutton"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:gravity="center"
		android:text="推荐给MSN的好友" />
	<!-- 同步设置说明文 -->
	<Button
		android:id="@+id/p3_friendbutton"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:gravity="center"
		android:text="加为好友" />
	<!-- 新浪微博-->
	<Button
		android:id="@+id/p3_friendbutton"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:gravity="center"
		android:text="新浪微博" />
	<!-- 人人网-->
	<Button
		android:id="@+id/p3_friendbutton"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:gravity="center"
		android:text="人人网" />
	<!-- 开心网-->
	<Button
		android:id="@+id/p3_friendbutton"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:gravity="center"
		android:text=" 开心网" />
	<!-- MSN-->
	<Button
		android:id="@+id/p3_friendbutton"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:gravity="center"
		android:text="MSN" />
	<!-- 联络幸福客栈-->
	<Button
		android:id="@+id/p3_friendbutton"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:gravity="center"
		android:text="联络幸福客栈" />
	<!-- 返回-->
	<Button
		android:id="@+id/p3_friendbutton"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:gravity="center"
		android:text="返回" />
</LinearLayout>